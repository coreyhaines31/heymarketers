<!-- Contact Marketer Form -->
<div class="min-h-screen" style="background-color: var(--color-background);">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h1 class="text-2xl font-bold" style="color: var(--color-foreground);">Contact <%= @marketer_profile.account.name %></h1>
          <p class="mt-1" style="color: var(--color-muted-foreground);">Send a message about your project or collaboration</p>
        </div>
        <%= link_to marketer_path(@marketer_profile), class: "btn btn-outline" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Profile
        <% end %>
      </div>
    </div>

    <!-- Marketer Info Card -->
    <div class="card mb-6">
      <div class="card-body">
        <div class="flex items-center space-x-4">
          <div class="w-16 h-16 rounded-full flex items-center justify-center text-white text-lg font-bold" style="background-color: var(--color-primary);">
            <%= @marketer_profile.account.name.first(2).upcase %>
          </div>
          <div>
            <h3 class="font-semibold" style="color: var(--color-foreground);"><%= @marketer_profile.account.name %></h3>
            <p class="text-sm" style="color: var(--color-muted-foreground);"><%= @marketer_profile.title %></p>
            <p class="text-sm font-medium" style="color: var(--color-primary);"><%= @marketer_profile.display_rate %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Message Form -->
    <div class="card">
      <div class="card-body">
        <%= form_with model: [@marketer_profile, @message], local: true, class: "space-y-6" do |f| %>

          <div>
            <label for="message_subject" class="block text-sm font-medium mb-2" style="color: var(--color-foreground);">
              Subject *
            </label>
            <%= f.text_field :subject,
                placeholder: "Brief description of your project or inquiry",
                class: "input w-full",
                required: true %>
            <% if @message.errors[:subject].any? %>
              <p class="text-sm mt-1" style="color: var(--color-destructive);"><%= @message.errors[:subject].first %></p>
            <% end %>
          </div>

          <div>
            <label for="message_body" class="block text-sm font-medium mb-2" style="color: var(--color-foreground);">
              Message *
            </label>
            <%= f.text_area :body,
                rows: 8,
                placeholder: "Describe your project, timeline, budget, and what you're looking for. Be as specific as possible to get the best response.",
                class: "input w-full",
                required: true %>
            <p class="text-sm mt-1" style="color: var(--color-muted-foreground);">
              Include details about your project scope, timeline, and budget range for the best response.
            </p>
            <% if @message.errors[:body].any? %>
              <p class="text-sm mt-1" style="color: var(--color-destructive);"><%= @message.errors[:body].first %></p>
            <% end %>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t" style="border-color: var(--color-border);">
            <%= link_to "Cancel", marketer_path(@marketer_profile), class: "btn btn-outline" %>
            <%= f.submit "Send Message", class: "btn btn-primary" %>
          </div>

        <% end %>

        <!-- Tips Section -->
        <div class="mt-6 p-4 rounded-lg" style="background-color: var(--color-accent);">
          <div class="flex">
            <svg class="w-5 h-5 mr-3 mt-0.5" style="color: var(--color-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="text-sm font-medium" style="color: var(--color-accent-foreground);">
                Tips for effective outreach
              </h3>
              <p class="text-sm mt-1" style="color: var(--color-accent-foreground);">
                • Be specific about your project requirements and goals<br>
                • Include your timeline and approximate budget range<br>
                • Mention any relevant details about your company or industry<br>
                • Ask specific questions about their experience with similar projects
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
