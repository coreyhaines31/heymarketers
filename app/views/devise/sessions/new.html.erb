<div class="min-h-screen flex items-center justify-center" style="background-color: var(--color-background);">
  <div class="max-w-md w-full space-y-8">
    <div class="card">
      <div class="card-body">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-bold" style="color: var(--color-foreground);">Welcome back</h2>
          <p class="mt-2" style="color: var(--color-muted-foreground);">Sign in to your account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
          <div>
            <%= f.label :email, class: "block text-sm font-medium mb-2", style: "color: var(--color-foreground);" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium mb-2", style: "color: var(--color-foreground);" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input w-full" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "mr-2" %>
              <%= f.label :remember_me, class: "text-sm", style: "color: var(--color-foreground);" %>
            </div>
          <% end %>

          <div>
            <%= f.submit "Sign In", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="mt-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
