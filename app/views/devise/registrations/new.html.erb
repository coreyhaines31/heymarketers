<div class="min-h-screen flex items-center justify-center" style="background-color: var(--color-background);">
  <div class="max-w-md w-full space-y-8">
    <div class="card">
      <div class="card-body">
        <div class="text-center mb-6">
          <h2 class="text-2xl font-bold" style="color: var(--color-foreground);">Create your account</h2>
          <p class="mt-2" style="color: var(--color-muted-foreground);">Join the HeyMarketers community</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :email, class: "block text-sm font-medium mb-2", style: "color: var(--color-foreground);" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium mb-2", style: "color: var(--color-foreground);" do %>
              Password
              <% if @minimum_password_length %>
                <span class="text-xs" style="color: var(--color-muted-foreground);">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input w-full" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium mb-2", style: "color: var(--color-foreground);" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input w-full" %>
          </div>

          <div>
            <%= f.submit "Create Account", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="mt-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
